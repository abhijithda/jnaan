{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CPP Build",
            "type": "shell",
            "command": "g++ -g ${relativeFile} -o ${fileDirname}/${fileBasenameNoExtension}.out",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}